node('AppServer') {
    def app

    stage('Cloning Git') {
    }

    stage('Build and Tag') {
        app.docker.build('flyxdocker/car_web')
    }

    stage('Push to DockerHub') {
        app.docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-creds')
    }

    stage('Deploy') {
        sh 'docker-compose down'
        sh 'docker-compose up -d'
    }
}
